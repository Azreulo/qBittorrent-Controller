<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="Account"
        android:title="Account" >
        <EditTextPreference
            android:defaultValue="192.168.1.1"
            android:dialogTitle="Hostname or IP;"
            android:key="hostname"
            android:summary="Hostname or IP"
            android:title="Connection Host" />
        <EditTextPreference
            android:defaultValue="80"
            android:dialogTitle="Connection Port?"
            android:key="port"
            android:summary="Port (80,8080)"
            android:title="Connection Port " 
            android:inputType="number"/>
        <EditTextPreference
            android:defaultValue="username"
            android:dialogTitle="Username?"
            android:key="admin"
            android:summary="Provide username"
            android:title="Username " />
        <EditTextPreference
            android:defaultValue=""
            android:dialogTitle="Password?"
            android:inputType="textPassword"
            android:key="password"
            android:summary="Provide password"
            android:title="Password" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="old_version"
            android:summary="Use old qBittorrent version"
            android:title="qBittorrent 2.x" />
    </PreferenceCategory>

</PreferenceScreen>
