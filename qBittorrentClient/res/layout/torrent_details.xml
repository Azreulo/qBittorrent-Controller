<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TorrentActionsActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/torrentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Torrent Name"
                android:textSize="20sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/torrentSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/torrentName"
                android:layout_marginTop="15dp"
                android:text="Size" />

            <TextView
                android:id="@+id/torrentProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress" />

            <TextView
                android:id="@+id/torrentRatio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratio" />

            <TextView
                android:id="@+id/torrentState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State" />

            <TextView
                android:id="@+id/torrentLeechs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leechs" />

            <TextView
                android:id="@+id/torrentSeeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seeds" />

            <TextView
                android:id="@+id/torrentHash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hash" />

            <TextView
                android:id="@+id/torrentPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority" />

            <TextView
                android:id="@+id/general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="General info"
                android:textSize="20sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/torrentSavePath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/torrentCreationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/torrentComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/torrentTotalWasted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/torrentTotalUploaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/torrentTotalDownloaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/torrentTimeElapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/torrentNbConnections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/torrentShareRatio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>